---
apiVersion: v1
kind: ConfigMap
metadata:
  name: transscale-config
  namespace: default
  labels:
    app: transscale
data:
  transscale.conf: |+
    sys.max.par = 8
    sys.max.transp = 3
    sys.monitoring.warmup = 300
    sys.monitoring.interval = 90
    scaling.strategy.module = transscale.strategies.ParallelismOnly
    scaling.combined.threshold = 30
    
    flink.host = flink-jobmanager
    flink.port = 8081
    flink.job.path = /etc/transscale/jobs/{{ job_file }}
    operator.name = TumblingEventTimeWindows
        
    debug.level = 1
