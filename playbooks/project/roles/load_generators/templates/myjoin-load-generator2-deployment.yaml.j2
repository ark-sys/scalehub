---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: load-generator2
  namespace: default
spec:
  selector:
    matchLabels:
      app: load-generator2
  replicas: 3
  template:
    metadata:
      labels:
        app: load-generator2
    spec:
      nodeSelector:
        node-role.kubernetes.io/worker: producer
      terminationGracePeriodSeconds: 0
      imagePullSecrets:
        - name: gitlab-arkcr
      containers:
        - name: workload-generator
          image: "{{image}}:{{tag}}"
          ports:
            - containerPort: 5701
              name: coordination
          env:
            - name: KUBERNETES_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: KUBERNETES_DNS_NAME
              value: "load-generator2.$(KUBERNETES_NAMESPACE).svc.cluster.local"
            - name: KAFKA_BOOTSTRAP_SERVERS
              value: "kafka-service:9092"
            - name: SCHEMA_REGISTRY_URL
              value: "http://schema-registry-service:8081"
            - name: KAFKA_INPUT_TOPIC
              value: "input-topic2"
            - name: NUM_SENSORS
              value: "100000"
            - name: PERIOD_MS
              value: "3000"
            - name: VALUE
              value: "20"
            - name: THREADS
              value: "8"
            - name: CLUSTER_NAME_PREFIX
              value: "load-generator2"
          resources:
            limits:
              memory: 2Gi
              cpu: 500m