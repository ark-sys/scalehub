---
kind: NetworkChaos
apiVersion: chaos-mesh.org/v1alpha1
metadata:
    namespace: default
    name: minio-latency
spec:
    selector:
        namespaces:
            - minio-operator
        labelSelectors:
            app: minio
            v1.min.io/tenant: scalehub-tenant
        nodeSelectors:
            chaos: 'true'
    # All values are described here
    # https://chaos-mesh.org/docs/simulate-network-chaos-on-kubernetes/#field-description
    mode: all
    action: delay
    delay:
        latency: "{{ latency }}"
        correlation: "{{ correlation }}"
        jitter: "{{ jitter }}"
    direction: to