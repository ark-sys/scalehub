---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: flink-taskmanager-xxl
  namespace: flink
spec:
  replicas: 0
  selector:
    matchLabels:
      app: flink
      component: taskmanager
  template:
    metadata:
      labels:
        app: flink
        component: taskmanager
        size: xxl
    spec:
      #     Force scheduling of one taskmanager per node
      #      affinity:
      #        podAntiAffinity:
      #          requiredDuringSchedulingIgnoredDuringExecution:
      #            - topologyKey: kubernetes.io/hostname
      #              labelSelector:
      #                matchLabels:
      #                  app: flink
      #                  component: taskmanager
      nodeSelector:
        node-role.kubernetes.io/worker: consumer
        node-role.kubernetes.io/autoscaling: SCHEDULABLE
      #        node-role.kubernetes.io/tnode: grid5000
      imagePullSecrets:
        - name: gitlab-scalehub
      containers:
        - name: taskmanager
          image: "{{image}}:{{tag}}"
          resources:
            limits:
              memory: 64Gi
              cpu: 31000m
          args: [ "taskmanager" ]
          ports:
            - containerPort: 6122
              name: rpc
            - containerPort: 6125
              name: query-state
            - containerPort: 9249
              name: metrics
          livenessProbe:
            tcpSocket:
              port: 6122
            initialDelaySeconds: 30
            periodSeconds: 60
          volumeMounts:
            - name: flink-config-volume
              mountPath: /opt/flink/conf/
            - name: data-volume
              mountPath: /mnt/data
      volumes:
        - name: flink-config-volume
          configMap:
            name: flink-config
            items:
              - key: flink-conf-taskmanager-xl.yaml
                path: flink-conf.yaml
              - key: log4j-console.properties
                path: log4j-console.properties
        - name: data-volume
          hostPath:
            path: /tmp/experiment-data
  serviceName:
    flink-taskmanager

