---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
  namespace: kafka
  labels:
    app: redis
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis
  template:
    metadata:
      name: redis
      labels:
        app: redis
    spec:
      nodeSelector:
        node-role.kubernetes.io/worker: producer

      containers:
        - name: redis
          image: "{{redis_image}}:{{redis_tag}}"
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 6379
          env:
            - name: GET_HOSTS_FROM
              value: env
      restartPolicy: Always

      