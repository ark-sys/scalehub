---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: schema-registry
  namespace: kafka
spec:
  selector:
    matchLabels:
      app: schema-registry
  replicas: 1
  template:
    metadata:
      labels:
        app: schema-registry
        component: schema-registry
    spec:
      nodeSelector:
        node-role.kubernetes.io/worker: producer
      imagePullSecrets:
        - name: gitlab-scalehub
      containers:
      - env:
        - name: SCHEMA_REGISTRY_HOST_NAME
          value: schema-registry
        - name: SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS
          value: kafka-service:9092
        image: registry.gitlab.inria.fr/stream-processing-autoscaling/scalehub/cp-schema-registry:7.0.1
        name: schema-registry
        resources:
          limits:
            memory: 1Gi
            cpu: 500m
      restartPolicy: Always
