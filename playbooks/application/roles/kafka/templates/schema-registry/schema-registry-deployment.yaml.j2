---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: schema-registry
  namespace: kafka
spec:
  selector:
    matchLabels:
      app: schema-registry
  replicas: 1
  template:
    metadata:
      labels:
        app: schema-registry
        component: schema-registry
    spec:
      nodeSelector:
        node-role.kubernetes.io/worker: producer

      containers:
      - env:
        - name: SCHEMA_REGISTRY_HOST_NAME
          value: schema-registry
        - name: SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS
          value: kafka-service.kafka:9092
        image: "{{schema_registry_image}}:{{schema_registry_tag}}"
        name: schema-registry
        resources:
          limits:
            memory: 1Gi
            cpu: 500m
      restartPolicy: Always
