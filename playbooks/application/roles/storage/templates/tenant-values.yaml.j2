tenant:
  name: scalehub-tenant
  replicas: 1
  features:
    bucketDNS: true
  pools:
    - servers: "{{ num_servers }}"
      volumesPerServer: 1
      name: flink-pool
      size: 1Gi
      storageClassName: local-path
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: node-role.kubernetes.io/worker
                    operator: In
                    values:
                      - consumer
                  - key: node-role.kubernetes.io/node-size
                    operator: NotIn
                    values:
                      - small
  nodeSelector:
    node-role.kubernetes.io/worker: "consumer"
  buckets:
    - name: flink-bucket
      policy: public
      objectLocking: false
  users: [ ]
  metrics:
    enabled: true
    port: 9000
    protocol: http
  prometheusOperator: true
  certificate:
    requestAutoCert: false
  env:
    - name: MINIO_PROMETHEUS_URL
      value: "http://prometheus-kube-prometheus-prometheus.monitoring.svc.cluster.local:9090"
    - name: MINIO_PROMETHEUS_AUTH_TYPE
      value: "public"
    - name: PROMETHEUS_NAMESPACE
      value: "monitoring"
    - name: PROMETHEUS_NAME
      value: "prometheus-kube-prometheus-prometheus"
ingress:
  console:
    enabled: true
    host: minio-tenant.k3s.scalehub.dev
    path: /
    annotations:
      kubernetes.io/ingress.class: nginx
      nginx.ingress.kubernetes.io/rewrite-target: /